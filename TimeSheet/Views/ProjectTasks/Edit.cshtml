@model TimeSheet.Models.ProjectTaskViewModel
@{
    ViewBag.Title = "Edit";
}

<div class="col-md-12 formtitle">PROJECT TASK DETAILS</div>

@using (Html.BeginForm("Edit", "Staff", FormMethod.Post, new { @class = "form-horizontal col-xs-12" }))
{
    @Html.AntiForgeryToken()

    
    <div class="col-xs-7">
        @*<div class="form-group">
            TODO: project name
        </div>*@
        <div class="form-group">
            @Html.LabelFor(model => model.Description, htmlAttributes: new { @class = "control-label col-xs-4" })
            <div class="col-xs-8">
                @Html.EditorFor(model => model.Description, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BudgetAmount, htmlAttributes: new { @class = "control-label col-xs-4" })
            <div class="col-xs-4">
                @Html.EditorFor(model => model.BudgetAmount, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <label class="text-left control-label col-xs-4">(ex GST)</label>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.BudgetHours, htmlAttributes: new { @class = "control-label col-xs-4" })
            <div class="col-xs-4">
                @Html.EditorFor(model => model.BudgetHours, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Chargeable, htmlAttributes: new { @class = "control-label col-xs-4" })
            <div class="col-xs-2">
                @Html.DropDownListFor(model => model.Chargeable, Model.ChargeableList, new { @class = "form-control" })
            </div>
        </div>

    </div>
    <div class="col-xs-5">
        <div class="form-group">
            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-12">
                @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @rows = "5" })
            </div>
        </div>
    </div>


}