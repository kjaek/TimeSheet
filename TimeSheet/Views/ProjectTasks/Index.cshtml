@{
    ViewBag.Title = "ProjectTasks";
}

<form class="form-inline" id="timeentryfrm">
    <div class="form-group">
        <div>
            <label class="control-label">Project:</label>
        </div>
        <select class="form-control" name="Project">
            <option value="1" selected="">All Projects</option>
            <option value="2">ABC Services - General Office Work</option>
            <option value="3">Adaptec - Help Desk Service</option>
            <option value="4">Citrus Corporation - Computer Maintenance</option>
            <option value="5">e-Global Corporation - Training Services</option>
        </select>
    </div>
    <div class="form-group">
        <div>
            <label class="control-label">Status:</label>
        </div>
        <select class="form-control" name="Status">
            <option value="1" selected="">All</option>
            <option value="2">Active</option>
            <option value="3">Disabled</option>
        </select>
    </div>
    <div class="form-group">
        <div>
            <label class="control-label">Text Search:</label>
        </div>
        <input class="form-control" name="TextSearch" />
    </div>
    <div class="form-group">
        <button class="btn btn-primary">Display</button>
    </div>
    <div class="form-group pull-right">
        <button class="btn btn-default"><span class="glyphicon glyphicon-plus"></span>Add Task to Project</button>
    </div>
</form>

<table width="1370" cellspacing="1" cellpadding="2" class="table-bordered">
    <thead>
        <tr class="persist-header">
            <th><a href="javascript:SubSort('TaskID')">ID</a></th>
            <th><a href="javascript:SubSort('SequenceNo')">Sequence<br>No</a></th>
            <th><a href="javascript:SubSort('Description')">Description</a></th>
            <th><a href="javascript:SubSort('ResourceList')">Resource List</a></th>
            <th><a href="javascript:SubSort('BudgetAmount')">Budget<br>(ex GST)</a></th>
            <th><a href="javascript:SubSort('BudgetHours')">Budget Hours</a></th>
            <th><a href="javascript:SubSort('ExtUniqueID')">External ID</a></th>
            <th><a href="javascript:SubSort('Reference')">Reference</a></th>
            <th><a href="javascript:SubSort('Notes')">Notes</a></th>
            <th><a href="javascript:SubSort('Chargeable')">Charge-<br>able</a></th>
            <th><a href="javascript:SubSort('Status')">Status</a></th>
            <th colspan="3"><a href="javascript:StartHelp('../','ActionIcons')" style="cursor:help;">Actions</a></th>
        </tr>
    </thead>
</table>

