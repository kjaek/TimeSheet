<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Timesheet KJ</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="container">
        <div class="col-md-2">
            @Html.ActionLink("Timesheet KJ", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
        </div>
        <div class="col-md-offset-6 col-md-4">
            @Html.Partial("_LoginPartial")
        </div>
        <div id="mainmenu" class="row">
            <div class="list-unstyled col-md-12 smallfont">
                <a class="text-center list-group-item col-md-2"><div class="glyphicon glyphicon-cog"></div><div>Admin</div></a>
                <a class="text-center list-group-item col-md-2"><div class="glyphicon glyphicon-time"></div><div>Timesheet</div></a>
                <a class="text-center list-group-item col-md-2"><div class="glyphicon glyphicon-wrench"></div><div>Settings</div></a>

            </div>
        </div>
        <div id="submenu" class="row seven-cols">
            <div class="list-unstyled table-bordered col-md-12 rounded">
                <div class="col-md-10">
                    <a class="text-center list-group-item col-md-1"><div class="glyphicon glyphicon-list"></div><div>View</div></a>
                </div>
                <div class="col-md-2">
                    <a class="text-center list-group-item col-md-offset-6 col-md-6"><div class="glyphicon glyphicon-collapse-up text-danger"></div><div>Logout</div></a>
                </div>
            </div>
        </div>
    </div>

    @*<div class="container">
        <div class="navbar navbar-default">
            <div class="navbar-inner">
                <div class="container">
                    <ul class="nav navbar-nav">
                        <li><a href="#">Admin</a></li>
                        <li class="active"><a href="#">Timesheet</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="navbar navbar-default">
            <div class="navbar-inner">
                <div class="container">
                    <ul class="nav navbar-nav">
                        <li class="active"><a href="#">View</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>*@

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Timesheet KJ</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
