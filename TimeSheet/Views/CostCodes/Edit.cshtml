@model TimeSheet.Models.CostCodeViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="col-md-12 formtitle">COST CODE DETAILS</div>

@using (Html.BeginForm("Edit", "Staff", FormMethod.Post, new { @class = "form-horizontal col-xs-12" }))
{
    <div class="form-group">
        @Html.LabelFor(model => model.CostCode, htmlAttributes: new { @class = "control-label col-xs-4" })
        <div class="col-xs-8">
            @Html.EditorFor(model => model.CostCode, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Comments, htmlAttributes: new { @class = "control-label col-xs-4" })
        <div class="col-xs-8">
            @Html.EditorFor(model => model.Comments, new { htmlAttributes = new { @class = "form-control" } })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(model => model.Amount, htmlAttributes: new { @class = "control-label col-xs-4" })
        <div class="col-xs-2">
            @Html.EditorFor(model => model.Amount, new { htmlAttributes = new { @class = "form-control" } })
        </div>
        <label class="text-left control-label col-xs-3">(ex GST)</label>
    </div>
