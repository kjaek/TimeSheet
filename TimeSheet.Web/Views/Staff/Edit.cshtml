@model TimeSheet.Web.Models.StaffViewModel

@{
    ViewBag.Title = "Edit";
}

<div class="col-md-12 formtitle">STAFF DETAILS</div>

@using (Html.BeginForm("Edit", "Staff", FormMethod.Post, new { @class = "form-horizontal col-xs-12" }))
