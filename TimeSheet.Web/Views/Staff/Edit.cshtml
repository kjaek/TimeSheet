                @Html.EditorFor(model => model.ChargeRate, new { htmlAttributes = new { @class = "form-control" } })
            </div>
            <label class="text-left control-label col-xs-3">(ex GST)</label>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.CostRate, htmlAttributes: new { @class = "control-label col-xs-5" })
