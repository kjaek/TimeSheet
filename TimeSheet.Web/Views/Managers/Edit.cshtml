@model TimeSheet.Web.Models.ManagerViewModel
@{
    ViewBag.Title = "Edit";
}

<div class="col-md-12 formtitle">Manager DETAILS</div>

@using (Html.BeginForm("Edit", "Staff", FormMethod.Post, new { @class = "form-horizontal col-xs-12" }))
{
    // Left section for form
    <div class="col-xs-7">
        <div class="form-group">
            @Html.LabelFor(model => model.FirstName, htmlAttributes: new { @class = "control-label col-xs-4" })
            <div class="col-xs-8">
                @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Surname, htmlAttributes: new { @class = "control-label col-xs-4" })
            <div class="col-xs-8">
                @Html.EditorFor(model => model.Surname, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Email, htmlAttributes: new { @class = "control-label col-xs-4" })
            <div class="col-xs-8">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        @*TODO: allow logon as
        <div class="form-group">
        </div>*@
        @*TODO: authorisation method
        <div class="form-group">
        </div>*@
        @*TODO: reference
        <div class="form-group">
        </div>*@
    </div>

    // Right section for form
    <div class="col-xs-5">
        <div class="form-group">
            @Html.LabelFor(model => model.Notes, htmlAttributes: new { @class = "control-label col-xs-2" })
            <div class="col-xs-12">
                @Html.TextAreaFor(model => model.Notes, new { @class = "form-control", @rows = "5" })
            </div>
        </div>
    </div>
}

